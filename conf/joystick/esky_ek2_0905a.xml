<joystick>
  <input>
    <axis index="0" name="roll" />
    <axis index="1" name="throttle" />
    <axis index="2" name="pitch" />
    <axis index="3" name="dummy" />
    <axis index="4" name="yaw" />
    <button index="0" name="b1" />
    <button index="1" name="b2" />
    <button index="2" name="b3" />
  </input>

  <messages period="0.025">
    <message class="datalink" name="RC_4CH" send_always="true">
      <field name="throttle" value="127-Fit(throttle, -93, 107, 0, 127)" />
      <field name="roll" value="127-Fit(roll, -75, 108, 0, 127)" />
      <field name="yaw" value="yaw" />
      <field name="pitch" value="pitch" />
    </message>
  </messages>

</joystick>
