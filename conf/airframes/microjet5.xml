ap.CFLAGS += -DGYRO -DADXRS150 -DPID_RATE_LOOP
ap.srcs += gyro.c

# Harware In The Loop

#ap.CFLAGS += -DHITL


# Config for SITL simulation
include $(PAPARAZZI_SRC)/conf/autopilot/sitl.makefile
sim.CFLAGS += -DCONFIG=\"tiny.h\" -DLOITER_TRIM
sim.srcs += nav_line.c





  </makefile>
</airframe>
