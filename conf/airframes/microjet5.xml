ap.CFLAGS += -DLED_3_BANK=0 -DLED_3_PIN=17 -DLED_4_BANK=0 -DLED_4_PIN=18 -DLED_5_BANK=0 -DLED_5_PIN=19 -DLED_6_BANK=0 -DLED_6_PIN=20


ap.srcs += commands.c

ap.CFLAGS += -DACTUATORS=\"servos_4015_hw.h\" -DSERVOS_4015
