ap.CFLAGS += -DNAV
ap.srcs += subsystems/nav.c fw_h_ctl.c fw_v_ctl.c


ap.CFLAGS += -DUSE_GYRO -DADXRS150
ap.srcs += gyro.c

# Harware In The Loop

#ap.CFLAGS += -DHITL


# Config for SITL simulation
include $(PAPARAZZI_SRC)/conf/firmwares/sitl.makefile
sim.CFLAGS += -DBOARD_CONFIG=\"tiny.h\"
