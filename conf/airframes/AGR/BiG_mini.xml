      <configure name="GPS_LED" value="1"/>
      <configure name="SYS_TIME_LED" value="3"/>
      <configure name="CAM_SWITCH_LED" value="5"/>
<!--      <define name="USE_MAGNETOMETER" value="FALSE"/> --> <!--desabilita magnetometro-->
