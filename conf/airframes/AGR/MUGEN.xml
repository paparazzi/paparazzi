	<firmware name="setup">
		<target name="tunnel" board="twog_1.0"/>
	</firmware>

<!-- commands section -->
	<servos>
    		<servo name="THROTTLE"      no="7" min="1000" neutral="1000" max="1700"/>
                <servo name="THROTTLE_CUT"  no="3" min="1000" neutral="1000" max="2000"/>       
    		<servo name="RUDDER"        no="4" min="1000" neutral="1500" max="2000"/>
		<servo name="AILERON_RIGHT" no="0" min="2000" neutral="1500" max="1000"/>
		<servo name="AILERON_LEFT"  no="2" min="1000" neutral="1500" max="2000"/>
		<servo name="CAM_TILT"      no="5" min="900"  neutral="1500" max="2100"/>
	</servos>

	<commands>
		<axis name="THROTTLE"      failsafe_value="0"/>
		<axis name="CH6"           failsafe_value="0"/>
		<axis name="YAW"           failsafe_value="0"/>
		<axis name="ROLL"          failsafe_value="0"/>
		<axis name="PITCH"         failsafe_value="0"/>
		<axis name="CAM_TILT"      failsafe_value="0"/>
	</commands>

	<rc_commands>
		<set command="THROTTLE"      value="@THROTTLE"/>
                <set command="CH6"           value="@CH6"/>
                <set command="YAW"           value="@YAW"/>
		<set command="ROLL"          value="@ROLL"/>
		<set command="PITCH"         value="@PITCH"/>
	</rc_commands>

	<ap_only_commands>
		<copy command="CAM_TILT"/>
	</ap_only_commands>

        <auto_rc_commands>
                <set command="YAW" value="@YAW"/>
                <set command="CH6" value="@CH6"/>
        </auto_rc_commands>

	<section name="MIXER">
		<define name="AILEVON_AILERON_RATE"  value="0.75"/>
		<define name="AILEVON_ELEVATOR_RATE" value="0.75"/>
     <define name="AILERON_DIFF" value="0.66"/><!--0.66-->
     <define name="COMBI_SWITCH" value="1.0"/>
	</section>

  <command_laws>
    <set servo="THROTTLE" value="@THROTTLE"/>
    <set servo="THROTTLE_CUT" value="@CH6"/>
    <set servo="RUDDER"          value="@YAW"/>
    <let var="roll" value="@ROLL"/>
    <set servo="AILERON_LEFT" value="($roll > 0 ? AILERON_DIFF : 1) * $roll"/>
    <set servo="AILERON_RIGHT" value="($roll > 0 ? 1 : AILERON_DIFF) * -$roll"/>
  <!--  <set servo="AILERON_RIGHT"   value="-@ROLL"/>
    <set servo="AILERON_LEFT"    value="@ROLL"/> -->
    <set servo="CAM_TILT"        value="@CAM_TILT"/>
  </command_laws>

