<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<airframe name="Blender">

  <modules main_freq="512">
    <load name="servo_switch.xml"/>
    <load name="rotorcraft_cam.xml"/>
  </modules>

  <firmware name="rotorcraft">
    <define name="USE_INS_NAV_INIT"/>
    <!--define name="GUIDANCE_H_USE_REF"/-->

    <target name="ap" board="navgo_1.0">
      <define name="FAILSAFE_GROUND_DETECT"/>
      <define name="USE_GPS_ACC4R"/>
      <define name="ACTUATORS_START_DELAY" value="5"/>
    </target>
    <target name="nps" board="pc">
      <subsystem name="fdm"         type="jsbsim"/>
    </target>

    <subsystem name="radio_control" type="ppm"/>
      <define name="RADIO_KILL_SWITCH" value="RADIO_CH6"/>
    <subsystem name="telemetry"     type="transparent"/>
    <subsystem name="actuators"     type="mkk">
    <define name="I2C_TRANSACTION_QUEUE_LEN"  value="20"/>
    <configure name="MKK_I2C_SCL_TIME" value="60"/> <!--19 = 400kbit / 60 = 120khz-->
    </subsystem>
    <subsystem name="motor_mixing"/>
    <subsystem name="actuators"     type="pwm">
      <define name="USE_PWM0"/>
    </subsystem>
    <subsystem name="imu"           type="prop1"/><!--navgo-->
    <define name="L3G_GYRO_LOWPASS" value="L3G4200_DLPF_1"/>
    <subsystem name="gps"           type="ublox">
      <configure name="GPS_BAUD"    value="B38400"/>
    </subsystem>
    <subsystem name="stabilization" type="int_quat"/>
    <subsystem name="ahrs"          type="int_cmpl_quat"/>
    <subsystem name="ins"           type="hff"/>
  </firmware>

  <section name="MIXING" prefix="MOTOR_MIXING_">
    <define name="TRIM_ROLL" value="0"/>
    <define name="TRIM_PITCH" value="0"/>
    <define name="TRIM_YAW" value="0"/>
    <define name="NB_MOTOR" value="8"/>
    <define name="SCALE" value="256"/>
    <define name="ROLL_COEF"  value="{ -256, -256, -256, -256,  256,  256,  256,  256}"/>
    <define name="PITCH_COEF" value="{  256,  256, -256, -256, -256, -256,  256,  256}"/>
    <define name="YAW_COEF"   value="{ -256,  256, -256,  256, -256,  256, -256,  256}"/>
    <define name="THRUST_COEF" value="{ 256,  256,  256,  256,  256,  256,  256,  256}"/>
  </section>

  <section name="ACTUATORS_MKK" prefix="ACTUATORS_MKK_">
    <define name="NB" value="8"/>
    <define name="ADDR" value="{ 0x52, 0x54, 0x56, 0x58, 0x5A, 0x5C , 0x5E, 0x60 }"/>
  </section>

  <servos driver="Mkk">
    <servo name="FRONT_RIGHT"      no="0"    min="0" neutral="6" max="255"/>
    <servo name="FRONT_MID_RIGHT"  no="1"    min="0" neutral="6" max="255"/>
    <servo name="BACK_MID_RIGHT"   no="2"    min="0" neutral="6" max="255"/>
    <servo name="BACK_RIGHT"       no="3"    min="0" neutral="6" max="255"/>
    <servo name="BACK_LEFT"        no="4"    min="0" neutral="6" max="255"/>
    <servo name="BACK_MID_LEFT"    no="5"    min="0" neutral="0" max="0"/>
    <servo name="FRONT_MID_LEFT"   no="6"    min="0" neutral="6" max="255"/>
    <servo name="FRONT_LEFT"       no="7"    min="0" neutral="6" max="255"/>
  </servos>

  <servos driver="Pwm">
    <servo name="DROP" no="0" min="1000" neutral="1500" max="2000"/>
  </servos>

  <commands>
    <axis name="PITCH"  failsafe_value="0"/>
    <axis name="ROLL"   failsafe_value="0"/>
    <axis name="YAW"    failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
  </commands>

  <command_laws>
    <call fun="motor_mixing_run(autopilot_motors_on,FALSE,values)"/>
    <set servo="FRONT_RIGHT"       value="motor_mixing.commands[SERVO_FRONT_RIGHT]"/>
    <set servo="FRONT_MID_RIGHT"   value="motor_mixing.commands[SERVO_FRONT_MID_RIGHT]"/>
    <set servo="BACK_MID_RIGHT"    value="motor_mixing.commands[SERVO_BACK_MID_RIGHT]"/>
    <set servo="BACK_RIGHT"        value="motor_mixing.commands[SERVO_BACK_RIGHT]"/>
    <set servo="BACK_LEFT"         value="motor_mixing.commands[SERVO_BACK_LEFT]"/>
    <set servo="BACK_MID_LEFT"     value="motor_mixing.commands[SERVO_BACK_MID_LEFT]"/>
    <set servo="FRONT_MID_LEFT"    value="motor_mixing.commands[SERVO_FRONT_MID_LEFT]"/>
    <set servo="FRONT_LEFT"        value="motor_mixing.commands[SERVO_FRONT_LEFT]"/>
  </command_laws>

  <section name="IMU" prefix="IMU_">
    <!-- SENS ITG3200  1/14.375 (deg/s)/LSB, rate frac 12bit => 1/14.375 * pi / 180 * 2^12 = (4.97312)    (1/8.5)*(3.1415/180)*4096
250dps = 8.41
500dps = 4.08
2000dps = 1.02
-->

    <define name="GYRO_P_SENS"  value="4.08" integer="16"/>
    <define name="GYRO_Q_SENS"  value="4.08" integer="16"/>
    <define name="GYRO_R_SENS"  value="4.08" integer="16"/>
    <define name="GYRO_P_NEUTRAL" value="0"/>
    <define name="GYRO_Q_NEUTRAL" value="0"/>
    <define name="GYRO_R_NEUTRAL" value="0"/>
    <define name="GYRO_P_SIGN" value="1"/>
    <define name="GYRO_Q_SIGN" value="-1"/>
    <define name="GYRO_R_SIGN" value="-1"/> 

    <define name="ACCEL_X_NEUTRAL" value="0"/>
    <define name="ACCEL_Y_NEUTRAL" value="13"/>
    <define name="ACCEL_Z_NEUTRAL" value="0"/>
    <define name="ACCEL_X_SIGN"  value="1"/>
    <define name="ACCEL_Y_SIGN"  value="-1"/>
    <define name="ACCEL_Z_SIGN"  value="-1"/>

    <define name="MAG_X_NEUTRAL" value="0"/>
    <define name="MAG_Y_NEUTRAL" value="0"/>
    <define name="MAG_Z_NEUTRAL" value="0"/>
    <define name="MAG_X_SENS" value="4.44131219218" integer="16"/>
    <define name="MAG_Y_SENS" value="4.56234629213" integer="16"/>
    <define name="MAG_Z_SENS" value="5.298653926"   integer="16"/>

    <define name="BODY_TO_IMU_PHI"   value="0."  unit="deg"/>
    <define name="BODY_TO_IMU_THETA" value="0."  unit="deg"/>
    <define name="BODY_TO_IMU_PSI"   value="90."  unit="deg"/>

  </section>

  <!-- Magnetic field for Toulouse (declination -16Â°) -->
  <section name="AHRS" prefix="AHRS_">
    <define name="PROPAGATE_FREQUENCY" value="512"/>
    <define name="PROPAGATE_LOW_PASS_RATES" value="1"/>
    <define name="H_X" value=" 0.513081"/>
    <define name="H_Y" value="-0.00242783"/>
    <define name="H_Z" value=" 0.858336"/>
  </section>

  <section name="INS" prefix="INS_">
    <!-- datasheet 1.4 mm/LSB : 0.0014*2^8 = 0.3584 -->
    <!-- calibration SENS = 1.156 :( -->
    <define name="BARO_SENS" value="1.156" integer="16"/>
    <define name="SONAR_SENS" value="0.0128633" integer="16"/>
    <define name="SONAR_OFFSET" value="7"/>
    <define name="SONAR_MAX_RANGE" value="4.0"/>
  </section>


  <section name="STABILIZATION_RATE" prefix="STABILIZATION_RATE_">

    <define name="SP_MAX_P" value="10000"/>
    <define name="SP_MAX_Q" value="10000"/>
    <define name="SP_MAX_R" value="10000"/>

    <define name="GAIN_P" value="400"/>
    <define name="GAIN_Q" value="400"/>
    <define name="GAIN_R" value="350"/>

  </section>


   <section name="STABILIZATION_ATTITUDE" prefix="STABILIZATION_ATTITUDE_">
    <!-- setpoints -->
    <define name="SP_MAX_PHI"     value="45."  unit="deg"/> <!--45-->
    <define name="SP_MAX_THETA"   value="45."  unit="deg"/> 
    <define name="SP_MAX_R"       value="260." unit="deg/s"/>
    <define name="DEADBAND_A"     value="5"/>
    <define name="DEADBAND_E"     value="5"/>
    <define name="DEADBAND_R"     value="600"/><!--600-->

<!--
SP_MAX: bound for angle input
REF_OMEGA: natural frequency of the second order
REF_ZETA: damping factor (should not be less than 0.8-0.7, maximum is 1)
REF_MAX_X: bound on angular speed
REF_MAX_XDOT: bound on angular acceleration
The response time (95% of the final value when doing a step input): ~ 3/(freq*damp)
To increase response time, you can increase the frequency, and the bounds.
-->
    <!-- reference -->
    <define name="REF_OMEGA_P"  value="1400" unit="deg/s"/><!-- velocidade do stick-->
    <define name="REF_ZETA_P"   value=".8"/> <!--.85-->
    <define name="REF_MAX_P"    value="800." unit="deg/s"/> 
    <define name="REF_MAX_PDOT" value="RadOfDeg(8000.)"/>

    <define name="REF_OMEGA_Q"  value="1400" unit="deg/s"/>
    <define name="REF_ZETA_Q"   value=".8"/>
    <define name="REF_MAX_Q"    value="800." unit="deg/s"/>
    <define name="REF_MAX_QDOT" value="RadOfDeg(4000.)"/>

    <define name="REF_OMEGA_R"  value="2200" unit="deg/s"/> <!--500-->
    <define name="REF_ZETA_R"   value="0.8"/>
    <define name="REF_MAX_R"    value="880." unit="deg/s"/><!--480 180-->
    <define name="REF_MAX_RDOT" value="RadOfDeg(4000.)"/> <!--4000-->

    <!-- feedback -->
    <define name="PHI_PGAIN"  value="700"/> <!--700   valores bons para 3s-->   
    <define name="PHI_DGAIN"  value="100"/> <!--250-->
    <define name="PHI_IGAIN"  value="50"/> <!--350-->

    <define name="THETA_PGAIN"  value="700"/>
    <define name="THETA_DGAIN"  value="100"/> 
    <define name="THETA_IGAIN"  value="10"/>

    <define name="PSI_PGAIN"  value="1000"/><!-- 2800 2200 1800-->
    <define name="PSI_DGAIN"  value="400"/><!--800   valor muito alto deixa pid muito sensivel a vibracao.-->
    <define name="PSI_IGAIN"  value="0"/>

    <!-- feedforward -->
    <define name="PHI_DDGAIN"   value="170"/><!--500-->
    <define name="THETA_DDGAIN" value="170"/>
    <define name="PSI_DDGAIN"   value="170"/>

    <define name="PHI_AGAIN"   value="0"/>
    <define name="THETA_AGAIN" value="0"/>
    <define name="PSI_AGAIN"   value="0"/>
  </section>


    <!-- reference -->
 <!--   <define name="REF_OMEGA_P"  value="800" unit="deg/s"/>
    <define name="REF_ZETA_P"   value="0.85"/>
    <define name="REF_MAX_P"    value="300." unit="deg/s"/>
    <define name="REF_MAX_PDOT" value="RadOfDeg(7000.)"/>

