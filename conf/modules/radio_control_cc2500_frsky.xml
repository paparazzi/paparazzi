<!DOCTYPE module SYSTEM "module.dtd">

<module name="radio_control_cc2500_frsky" dir="radio_control/cc2500_frsky">
  <doc>
    <description>
      Software implementation of Frsky X radio control protocol.
    </description>
    <configure name="CC2500_SPI_DEV" value="SPIx" description="SPI device"/>
    <configure name="CC2500_SPI_SLAVE_IDX" value="2" description="SPI slave index"/>
    <configure name="CC2500_GDO0_GPIO_PORT" value="GPIOC" description="GDO0 GPIO port"/>
    <configure name="CC2500_GDO0_GPIO" value="GPIO14" description="GDO0 GPIO pin"/>
    <configure name="CC2500_RX_LED_GPIO_PORT" value="GPIOB" description="RX LED GPIO port"/>
    <configure name="CC2500_RX_LED_GPIO" value="GPIO9" description="RX LED GPIO pin"/>
    <configure name="CC2500_RX_LED_INVERT" value="TRUE" description="RX LED invert signal"/>
    <configure name="CC2500_BIND_BTN_GPIO_PORT" value="GPIOB" description="Bind button GPIO port"/>
    <configure name="CC2500_BIND_BTN_GPIO" value="GPIO2" description="Bind button GPIO pin"/>
    <configure name="CC2500_RX_SPI_PROTOCOL" value="RX_SPI_FRSKY_X_LBT (default)|RX_SPI_FRSKY_X|RX_SPI_FRSKY_D" description="RX protocol"/>
    <configure name="CC2500_AUTOBIND" value="FALSE" description="Enter BIND mode at startup"/>
  </doc>
  <header>
    <file name="cc2500.h" dir="peripherals"/>
    <file name="cc2500_paparazzi.h" dir="subsystems/radio_control/cc2500_frsky"/>
  </header>
  <init fun="cc2500_init()"/>
  <makefile target="ap|fbw|sim|nps">
    <define name="RADIO_CONTROL_TYPE_H" value="subsystems/radio_control/frskyX.h" type="string"/>
    <configure name="CC2500_SPI_DEV" default="SPI3" case="upper|lower"/>
    <configure name="CC2500_SPI_SLAVE_IDX" default="2"/>
    <configure name="CC2500_GDO0_GPIO_PORT" default="GPIOC"/>
    <configure name="CC2500_GDO0_GPIO" default="GPIO14"/>
    <configure name="CC2500_RX_LED_GPIO_PORT" default="GPIOB"/>
    <configure name="CC2500_RX_LED_GPIO" default="GPIO9"/>
    <configure name="CC2500_RX_LED_INVERT" default="FALSE"/><!-- TODO should be TRUE, but annoying while debugging -->
    <configure name="CC2500_BIND_BTN_GPIO_PORT" default="GPIOB"/>
    <configure name="CC2500_BIND_BTN_GPIO" default="GPIO2"/>
    <configure name="CC2500_RX_SPI_PROTOCOL" default="RX_SPI_FRSKY_X_LBT"/>
    <configure name="CC2500_AUTOBIND" default="FALSE"/>
  </makefile>
  <makefile target="ap" cond="ifeq (,$(findstring $(SEPARATE_FBW),1 TRUE))">
    <define name="RADIO_CONTROL"/>
    <define name="USE_$(CC2500_SPI_DEV)"/>
    <define name="USE_SPI_SLAVE$(CC2500_SPI_SLAVE_IDX)"/>
    <define name="CC2500_SPI_DEV" value="$(CC2500_SPI_DEV_LOWER)"/><!-- TODO Replace with regular ifndef,def,endif pattern! -->
    <define name="CC2500_SPI_SLAVE_IDX" value="$(CC2500_SPI_SLAVE_IDX)"/>
    <define name="CC2500_GDO0_GPIO_PORT" value="$(CC2500_GDO0_GPIO_PORT)"/>
    <define name="CC2500_GDO0_GPIO" value="$(CC2500_GDO0_GPIO)"/>
    <define name="CC2500_RX_LED_GPIO_PORT" value="$(CC2500_RX_LED_GPIO_PORT)"/>
    <define name="CC2500_RX_LED_GPIO" value="$(CC2500_RX_LED_GPIO)"/>
    <define name="CC2500_RX_LED_INVERT" value="$(CC2500_RX_LED_INVERT)"/>
    <define name="CC2500_BIND_BTN_GPIO_PORT" value="$(CC2500_BIND_BTN_GPIO_PORT)"/>
    <define name="CC2500_BIND_BTN_GPIO" value="$(CC2500_BIND_BTN_GPIO)"/>
    <define name="CC2500_RX_SPI_PROTOCOL" value="$(CC2500_RX_SPI_PROTOCOL)"/>
    <define name="CC2500_AUTOBIND" value="$(CC2500_AUTOBIND)"/>
    <file name="radio_control.c" dir="subsystems"/>
    <file name="cc2500.c" dir="peripherals"/>
    <file name="cc2500_paparazzi.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_settings.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_compat.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_common.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_rx.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_rx_spi.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_rx_spi_common.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_frsky_shared.c" dir="subsystems/radio_control/cc2500_frsky"/>
    <file name="cc2500_frsky_x.c" dir="subsystems/radio_control/cc2500_frsky"/>
  </makefile>
</module>