<!DOCTYPE module SYSTEM "module.dtd">

<module name="radio_control_ppm" dir="radio_control" task="radio_control">
  <doc>
    <description>
      Radio control based on PPM input
    </description>
    <configure name="PPM_INPUT" value="SERVO1" description="Select which servo can be used as PPM input"/>
  </doc>
  <dep>
    <depends>radio_control_common</depends>
    <provides>radio_control</provides>
  </dep>
  <header>
    <file name="ppm.h"/>
  </header>
  <init fun="ppm_init()"/>
  <event fun="ppm_event()"/>
  <makefile target="ap|fbw|sim|nps">
    <configure name="PPM_INPUT" case="upper|lower"/>

    <!-- Enable ICU for the PPM port-->
    <define name="USE_ICU_$(PPM_INPUT)"/>

    <!-- Define PPM configuration (move to c file?) -->
    <define name="PPM_TIMER" value="$(PPM_INPUT)_ICU_DRIVER"/>
    <define name="PPM_CHANNEL" value="$(PPM_INPUT)_CHANNEL"/>
    <define name="PPM_GPIO" value="$(PPM_INPUT)_GPIO"/>
    <define name="PPM_PIN" value="$(PPM_INPUT)_PIN"/>
    <define name="PPM_AF" value="$(PPM_INPUT)_AF"/>

    <file name="ppm.c"/>
    <file_arch name="ppm_arch.c"/>
    <test/>
  </makefile>
</module>

