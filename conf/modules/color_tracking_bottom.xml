<!DOCTYPE module SYSTEM "module.dtd">

<module name="CT_Bottom" dir="computer_vision">
  <doc>
    <description>CT_Bottom</description>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings name="CT_Bottom">

        <dl_setting var="vel_gain_color"  min="0." step="0.05" max="1" shortname="VxVy_gain" />
        <dl_setting var="vz_desired"  min="0.01" step="0.1" max="1" shortname="vz_ref" />
        <dl_setting var="target_reached"  min="0.05" step="0.05" max="1" shortname="proximity" />
        <dl_setting var="height_above_target"  min="0.75" step="0.05" max="2" shortname="height_above_target" />

        <dl_setting var="color" min="0" step="1" max="1" shortname="RED/BLUE"/>
        <dl_setting var="modify_image_bottom" min="0" step="1" max="1" />
        <dl_setting var="blob_threshold_bottom"  min="50" step="1" max="10000" shortname="counter" />

        <dl_setting var="color_lum_min_red" min="0" step="1" max="255" shortname="y_min_red" />
        <dl_setting var="color_lum_max_red" min="0" step="1" max="255" shortname="y_max_red" />
        <dl_setting var="color_cb_min_red"  min="0" step="1" max="255" shortname="u_min_red" />
        <dl_setting var="color_cb_max_red"  min="0" step="1" max="255" shortname="u_max_red" />
        <dl_setting var="color_cr_min_red"  min="0" step="1" max="255" shortname="v_min_red" />
        <dl_setting var="color_cr_max_red"  min="0" step="1" max="255" shortname="v_max_red" />

        <dl_setting var="color_lum_min_blue" min="0" step="1" max="255" shortname="y_min_blue" />
        <dl_setting var="color_lum_max_blue" min="0" step="1" max="255" shortname="y_max_blue" />
        <dl_setting var="color_cb_min_blue"  min="0" step="1" max="255" shortname="u_min_blue" />
        <dl_setting var="color_cb_max_blue"  min="0" step="1" max="255" shortname="u_max_blue" />
        <dl_setting var="color_cr_min_blue"  min="0" step="1" max="255" shortname="v_min_blue" />
        <dl_setting var="color_cr_max_blue"  min="0" step="1" max="255" shortname="v_max_blue" />

      </dl_settings>
    </dl_settings>
  </settings>

  <depends>video_thread</depends>

  <header>
    <file name="color_tracking_bottom.h"/>
  </header>

  <init fun="color_tracking_bottom_init()"/>

  <makefile>
    <file name="color_tracking_bottom.c"/>
    <file name="imav2016markers.c"/>
    <file name="blob_finder.c" dir="modules/computer_vision/blob/"/>
  </makefile>

</module>