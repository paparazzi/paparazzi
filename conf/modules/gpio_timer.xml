<!DOCTYPE module SYSTEM "./module.dtd">

<module name="gpio_timer">
  <doc>
    <description>timer for gpio</description>
    <define name="GPIO_TIME_ON" value="8" description="time in 1/4s default 8"/>
    <define name="GPIO_TIME_OFF" value="4" description="time in 1/4s default 4"/>
    <define name="SWITCH_GPIO" value="GPIOB,GPIO1" description=""/>
  </doc>

  <header>
    <file name="gpio_timer.h"/>
  </header>

  <init fun="gpio_timer_init()"/>

  <periodic fun="gpio_timer_periodic()" freq="4" autorun="TRUE"/>

  <makefile >
    <file name="gpio_timer.c"/>
  </makefile>

</module>
