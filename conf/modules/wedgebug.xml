<!DOCTYPE module SYSTEM "module.dtd">

<module name="wedgebug" dir="wedgebug">
  <doc>
    <description> An integration of the WegdeBug algorithm (Laubach 1999) for path finding, for drones with stereo vision. </description>
    <define name="WEDGEBUG_CAMERA_RIGHT" value="front_camera|bottom_camera" description="Video device to use"/>
    <define name="WEDGEBUG_CAMERA_RIGHT" value="front_camera|bottom_camera" description="Video device to use"/>

  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="W-Dispariy">
       <!-- <dl_setting var="N_disparities" min="0" step="16" max = "128" shortname="N_disparities"/>
        <dl_setting var="block_size_disparities" min="9" step="2" max = "250" shortname="block_size"/>  
        <dl_setting var="min_disparity" min="-10" step="1" max = "30" shortname="min_disparity"/> -->
        <dl_setting var="SE_opening_OCV" min="5" step="1" max = "401" shortname="SE_opening_OCV"/>
        <dl_setting var="SE_closing_OCV" min="5" step="1" max = "401" shortname="SE_closing_OCV"/>
        <dl_setting var="SE_dilation_OCV_1" min="5" step="1" max = "401" shortname="SE_dilation_OCV_1"/>
        <dl_setting var="SE_dilation_OCV_2" min="5" step="1" max = "51" shortname="SE_dilation_OCV_2"/>
        
        <dl_setting var="threshold_median_disparity" min="0" step="1" max = "128" shortname="threshold_median_disparity"/>
        <dl_setting var="threshold_edge_magnitude" min="0" step="50" max = "1000" shortname="threshold_edge_magnitude"/>
        <dl_setting var="threshold_disparity_of_edges" min="0" step="1" max = "128" shortname="threshold_disparity_of_edges"/>
        
        <dl_setting var="threshold_distance_to_goal" min="0.00" step="0.05" max = "1.00" shortname="threshold_distance_to_goal"/>
        <dl_setting var="threshold_distance_to_angle" min="0.0" step="0.1" max = "3.1" shortname="threshold_distance_to_angle"/>
        <dl_setting var="safety_distance_front" min="0.0" step="0.1" max = "5.0" shortname="safety_distance_front"/>
      </dl_settings>

    </dl_settings>
  </settings>
  <header>
    <file name="wedgebug.h"/>
  </header>
  <init fun="wedgebug_init()"/>
  <periodic fun="wedgebug_periodic()" freq="6"/> <!-- originally 4 -->
  <makefile target="ap|nps">
    <file name="wedgebug.c"/>
    <file name="wedgebug_opencv.cpp"/>
    
    <flag name="CXXFLAGS" value="I$(PAPARAZZI_SRC)/sw/ext/opencv_bebop/install_pc/include"/> <!-- needed to include headers -->
    
    <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install_pc/lib"/>
    <flag name="LDFLAGS" value="lopencv_world"/>
    <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install_pc/share/OpenCV/3rdparty/lib"/>
    <flag name="LDFLAGS" value="llibprotobuf"/>
    <flag name="LDFLAGS" value="lquirc"/>
    <flag name="LDFLAGS" value="L/usr/lib/x86_64-linux-gnu"/>
    <flag name="LDFLAGS" value="ljpeg"/>
    <flag name="LDFLAGS" value="lpng"/>
    <flag name="LDFLAGS" value="ltiff"/>
    <flag name="LDFLAGS" value="L/usr/lib/x86_64-linux-gnu/hdf5/serial"/>
    <flag name="LDFLAGS" value="lhdf5"/>
    <flag name="LDFLAGS" value="lpthread"/>
    <flag name="LDFLAGS" value="lsz"/>
    <flag name="LDFLAGS" value="lz"/>
    <flag name="LDFLAGS" value="ldl"/>
    <flag name="LDFLAGS" value="lm"/>
    <flag name="LDFLAGS" value="lfreetype"/>
    <flag name="LDFLAGS" value="lharfbuzz"/>
    <flag name="LDFLAGS" value="lrt"/>
  </makefile>
</module>