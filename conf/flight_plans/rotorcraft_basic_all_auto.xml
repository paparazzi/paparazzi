<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="152" ground_alt="147" lat0="43 33 50.83" lon0="1 28 52.61" max_dist_from_home="400" name="Rotorcraft autonomous A B" security_height="2">
  <header>
#include "autopilot.h"
#include "../../subsystems/electrical.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="STDBY" x="-2.0" y="-5.0"/>
    <waypoint name="A" x="3.6" y="-13.9"/>
    <waypoint name="B" x="27.5" y="-48.2"/>
    <waypoint name="TD" x="5.6" y="-10.9"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
      <!--<call fun="NavSetAltitudeReferenceHere()"/>-->
    </block>
    <block name="Holding point">
      <exception cond="autopilot_motors_on" deroute="Takeoff"/>
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <!--<exception cond="!RcCommand(RC_MODE_CHANGE) && autopilot_in_flight" deroute="Takeoff"/>-->
      <!--<exception cond="RcCommand(RC_MODE_CHANGE) && autopilot_in_flight" deroute="Standby"/>-->
      <call fun="NavResurrect()"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <!--<call fun="NavSetWaypointHere(WP_TD)"/> -->
      <!-- <call fun="NavSetWaypointHere(WP_STDBY)"/> -->
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="line_A_B"/>
      <stay vmode="climb" climb="0.9" wp="CLIMB"/>
    </block>
    <block name="line_A_B">
      <go from="A" hmode="route" wp="B"/>
      <stay wp="B" until="stage_time>3"/>
      <go from="B" hmode="route" wp="A"/>
      <deroute block="Standby"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <exception cond="!autopilot_motors_on" deroute="Holding point"/>
      <!--<exception cond="LowBatLevel()" deroute="Land"/>-->
      <stay wp="STDBY"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
  </blocks>
</flight_plan>
