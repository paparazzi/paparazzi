<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="49" ground_alt="46" lat0="45.564133" lon0="-122.622467" max_dist_from_home="125" name="Rotorcraft Basic (Portland)" security_height="2">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint alt="59.0" name="HOME" x="-0.2" y="-7.1"/>
    <waypoint alt="59.0" name="CLIMB" x="-4.9" y="-3.4"/>
    <waypoint alt="59.0" name="STDBY" x="2.5" y="-0.2"/>
    <waypoint alt="59.0" name="p1" x="-0.2" y="36.2"/>
    <waypoint alt="61.0" name="p2" x="40.7" y="9.4"/>
    <waypoint alt="61.0" name="p3" x="40.9" y="37.5"/>
    <waypoint alt="59.0" name="p4" x="-0.3" y="10.1"/>
    <waypoint alt="62.0" name="CAM" x="42.1" y="-6.8"/>
    <waypoint name="TD" x="8.4" y="-8.0"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 7.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="2.00" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="stay_p1">
      <stay wp="p1"/>
    </block>
    <block name="stay_p2">
      <stay wp="p2"/>
    </block>
    <block name="go_p2">
      <!-- <call fun="nav_set_heading_deg(90)"/> -->
      <call fun="nav_set_heading_towards_waypoint(WP_p2)" />
      <go wp="p2"/>
      <deroute block="stay_p2"/>
    </block>
    <block name="line_p1_p2">
      <go from="p1" hmode="route" wp="p2"/>
      <stay until="stage_time>10" wp="p2"/>
      <go from="p2" hmode="route" wp="p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="route_tri">
      <go from="p1" hmode="route" wp="p3"/>
      <go from="p3" hmode="route" wp="p4"/>
      <go from="p4" hmode="route" wp="p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="route_quad">
      <go from="p1" hmode="route" wp="p3"/>
      <go from="p3" hmode="route" wp="p2"/>
      <go from="p2" hmode="route" wp="p4"/>
      <go from="p4" hmode="route" wp="p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="path_rev_quad">
      <path wpts="p1, p4, p2, p3, p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="route_x">
      <go from="p1" hmode="route" wp="p2"/>
      <go from="p2" hmode="route" wp="p3"/>
      <go from="p3" hmode="route" wp="p4"/>
      <go from="p4" hmode="route" wp="p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="survey_p1_p2_NS">
    	<survey_rectangle wp1="p1" wp2="p2" grid="10" orientation="NS"/>
    </block>
    <block name="survey_p1_p2_WE">
      <survey_rectangle wp1="p1" wp2="p2" grid="10" orientation="WE"/>
    </block>
    <block group="extra_pattern" name="Survey p1-p2 Sweep NS SET" strip_button="SvySweep-NS">
      <call fun="nav_survey_rectangle_rotorcraft_setup(WP_p1, WP_p2, sweep, NS)"/>
      <deroute block="Survey RECTANGLE RUN"/>
    </block>
    <block group="extra_pattern" name="Survey p1-p2 Sweep LO SET" strip_button="SvySweep-LO">
      <call fun="nav_survey_rectangle_rotorcraft_setup(WP_p1, WP_p2, sweep, WE)"/>
      <deroute block="Survey RECTANGLE RUN"/>
    </block>
    <block group="extra_pattern" name="Survey RECTANGLE RUN" strip_button="SvySweep CONT">
      <exception cond="rectangle_survey_sweep_num > 1" deroute="Standby"/>
      <call fun="nav_survey_rectangle_rotorcraft_run(WP_p1, WP_p2)"/>
    </block>
    <!--
    <block name="follow test">
	  <follow ac_id="4" distance="50" height="20"/>
    </block>
    -->
    <block name="circle CAM" pre_call="nav_set_heading_towards_waypoint(WP_CAM)">
      <circle radius="nav_radius" wp="CAM"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
