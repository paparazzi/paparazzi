<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="60" name="Flamewheel control alloc maneouvres" security_height="0.4">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="0.0" alt="1.5"/>
    <waypoint name="STDBY" x="0.0" y="0.0" alt="1.5"/>
    <waypoint name="PMY" x="-2.0" y="-2.0" alt="1.5"/>
    <waypoint name="ALT" x="2.0" y="2.0" alt="1.5"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 2)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block key="r" name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="GetPosAlt() @GT 0.8" deroute="Standby"/>
      <stay vmode="climb" climb="nav_climb_vspeed" wp="CLIMB"/>
    </block>
    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block key="p" name="Primary" strip_button="Primary">
      <call_once fun="nav_set_heading_deg(0)"/>
      <stay wp="PMY"/>
    </block>
    <block key="a" name="Alternate" strip_button="Alternate">
      <call_once fun="nav_set_heading_deg(30)"/>
      <stay wp="ALT"/>
    </block>
    <block key="l" name="land" strip_button="land" strip_icon="land-right.png">
        <stay wp="HOME" until="stage_time @GT 7"/>
        <deroute block="Flare"/>
    </block>
    <block name="Flare">
    <!--<exception cond="NavDetectGround()" deroute="Holding point"/>-->
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <exception cond="0.10 @GT GetPosAlt()" deroute="Landed"/>
      <!--<call_once fun="NavStartDetectGround()"/>-->
      <stay climb="nav_descend_vspeed" vmode="climb" wp="HOME"/>
    </block>
    <block name="Landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
