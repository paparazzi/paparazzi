<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Rotorcraft Optitrack (Delft)" security_height="0.3">
  <header>
		#include "autopilot.h"
		#include "subsystems/datalink/datalink.h"
		#include "subsystems/electrical.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="-0.3" y="-1.2"/>
    <waypoint name="CLIMB" x="-0.5" y="-2.0"/>
    <waypoint name="GOAL" x="-0.1" y="-0.5"/>
    <waypoint name="STDBY" x="0.5" y="0.3"/>
    <waypoint name="TD" x="1.1" y="-0.3"/>
    <waypoint alt="1.5" name="Left" x="-0.5" y="-3.7"/>
    <waypoint name="Right" x="3.3" y="-1.2"/>
    <waypoint name="Front" x="-0.9" y="1.6"/>
    <waypoint name="Back" x="1.4" y="-1.8"/>
    <waypoint lat="51.9906213" lon="4.3768628" name="FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="FA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="!GpsFixValid() && !(nav_block == IndexOfBlock('Wait GPS')) && !(nav_block == IndexOfBlock('slowDecentLinkLoss'))" deroute="slowDecentLinkLoss"/>
    <exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Wait GPS')) && !(nav_block == IndexOfBlock('Holding point')) && !(nav_block == IndexOfBlock('land')) && !(nav_block == IndexOfBlock('landed')) && !(nav_block == IndexOfBlock('flare')) && !(nav_block == IndexOfBlock('slowDecentLinkLoss'))" deroute="land_here"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavSetWaypointHere(WP_Left)"/>
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="Standby"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="START" strip_button="Go" strip_icon="lookfore.png">
      <set value="0" var="nav_heading"/>
      <call_once fun="NavSetWaypointHere(WP_GOAL)"/>
      <set value="0" var="nav_heading"/>
    </block>
    <block name="StayLeft">
      <set value="23805.779156718" var="nav_heading"/>
      <stay wp="Left"/>
      <set value="23805.779156718" var="nav_heading"/>
    </block>
    <block name="line_RL">
      <go from="Right" hmode="route" wp="Left"/>
      <stay until="stage_time>3" wp="Left"/>
      <go from="Left" hmode="route" wp="Right"/>
      <stay until="stage_time>3" wp="Right"/>
      <deroute block="line_RL"/>
    </block>
    <block name="StayBack">
      <stay wp="Back"/>
    </block>
    <block name="line_FB">
      <go from="Back" hmode="route" wp="Front"/>
      <stay until="stage_time>1" wp="Front"/>
      <go from="Front" hmode="route" wp="Back"/>
      <stay until="stage_time>1" wp="Back"/>
      <deroute block="line_FB"/>
    </block>
    <block name="StayGoal">
      <stay wp="GOAL"/>
    </block>
    <block name="land_here" strip_button="Land Here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="block_time>3" deroute="landed"/>
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call_once fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="slowDecentLinkLoss">
      <exception cond="block_time>3" deroute="landed"/>
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
  </blocks>
</flight_plan>
