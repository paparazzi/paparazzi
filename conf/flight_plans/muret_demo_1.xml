    </block>
    <block name="circle">
      <circle wp="road_end" ALT="ground_alt+50" radius="75"/>
    </block>
    <block name="go too far">
      <go wp="too far"/>
      <circle wp="too far" radius="50"/>
    </block>
  </blocks>
</flight_plan>
