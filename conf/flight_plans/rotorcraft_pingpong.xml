<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="152" ground_alt="147" lat0="43 33 50.83" lon0="1 28 52.61" max_dist_from_home="150" name="Rotorcraft Basic (Enac)" security_height="2">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="STDBY" x="-2.0" y="-5.0"/>
    <waypoint name="p1" x="3.6" y="-13.9"/>
    <waypoint name="p2" x="27.5" y="-48.2"/>
    <waypoint name="p3" x="16.7" y="-19.6"/>
    <waypoint name="p4" x="13.7" y="-40.7"/>
    <waypoint name="CAM" x="-20" y="-50" height="2."/>
    <waypoint name="TD" x="5.6" y="-10.9"/>
  </waypoints>
  <blocks>
 <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0.1" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
       <exception cond="ins_int.baro_z > 1.0" deroute="land here"/>
        <attitude pitch="0" roll="0" vmode="climb" climb="nav_climb_vspeed" until="stage_time>10"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
        <attitude pitch="0" roll="0" throttle="0" vmode="climb" climb="nav_descend_vspeed" until="stage_time>10"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
